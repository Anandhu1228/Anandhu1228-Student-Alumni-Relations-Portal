        color: rgb(0, 0, 0);
    }

    .btn_confirm_pass_updation{
        background-color: rgb(93, 138, 222);
        color: white;
        padding: 5px;
        font-size: 15px;
        border-radius: 8px;
        transition: background-color 0.3s ease;
        text-decoration: none;
