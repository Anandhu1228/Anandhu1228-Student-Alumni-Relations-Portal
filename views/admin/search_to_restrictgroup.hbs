 <script>


    document.addEventListener("DOMContentLoaded", function () {
        const changeViewBtn = document.querySelector('.change_view_btn');
        const showuser1 = document.querySelector('.showuser1');
        const showuser2 = document.querySelector('.showuser2');
        const moreAdvanceDD = document.querySelector('.moreAdvanceDD');

        changeViewBtn.addEventListener('click', function () {
            // Toggle visibility of showuser1 and showuser2
            if (showuser1.style.display === 'none') {
                showuser1.style.display = 'block';
                showuser2.style.display = 'none';
            } else {
                showuser1.style.display = 'none';
                showuser2.style.display = 'block';
            }
        });
    });


    function confirmselect(id) {
        if (confirmResult = confirm("Are you sure you want to select this user?")) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/admin/restrict-groupchat_entry';
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'ProfileId';
            input.value = id;
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        } else {
            // If the user clicks Cancel, do nothing
            return false;
        }
    }

    function confirmReselect(id) {
        if (confirmResult = confirm("Are you sure you want to remove groupchat restriction for this user?")) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/admin/remove_restrict_groupchat_entry';
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'ProfileId';
            input.value = id;
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        } else {
            // If the user clicks Cancel, do nothing
            return false;
        }
    }

    function adminViewProfile(profileId) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/admin-view-profile';
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'profileId';
        input.value = profileId;
        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
    }


    function limitCharacters(input, maxChars) {
        if (input.value.length > maxChars) {
            alert("You have reached the maximum allowed characters.");
            input.value = input.value.substring(0, maxChars);
        }
    }
    
</script>
