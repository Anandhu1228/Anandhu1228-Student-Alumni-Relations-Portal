    //  FUNCTION TO SEND TIMESTAMP , COMMENT COUNT AND LIKE COUNT WHEN LEAVING
   function sendTimestampOnUnload() {
        const timestamp = new Date().toISOString();
        const postsData = [];

        // Iterate over each post and add _id, like_count, and comment_count to postsData
        document.querySelectorAll('.post-container').forEach(postContainer => {
            // Extract the postId from the onclick attribute of the delete button
            const deleteButton = postContainer.querySelector('.delete_button');
            const onclickValue = deleteButton.getAttribute('onclick');
            const postId = onclickValue.match(/'([^']+)'/)[1]; // Extract the ID using a regular expression

            // Extract the like count
            const likeCount = parseInt(postContainer.querySelector('#like-count').textContent);

            // Count the number of comments
            const commentCount = postContainer.querySelectorAll('.commentsss').length;

            postsData.push({ postId, likeCount, commentCount });
        });

        // Create the data to send
        const postData = {
            timestamp,
            postsData
        };

        // Use navigator.sendBeacon for asynchronous data transmission during unload
        const url = '/send_timestamp_leave_ownposts';
        const body = JSON.stringify(postData);
        const blob = new Blob([body], { type: 'application/json' });

        navigator.sendBeacon(url, blob);
    }
    window.addEventListener('beforeunload', sendTimestampOnUnload);


