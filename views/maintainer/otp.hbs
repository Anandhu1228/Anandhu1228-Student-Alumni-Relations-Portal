<style>
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f8f9fa;
  }
  .container {
    max-width: 400px;
    padding: 20px;
    background-color: none;
    /*box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);*/
    border-radius: 8px;
  }
  .form-group {
    margin-bottom: 20px;
  }
  .otp-input {
    width: 40px;
    height: 40px;
    margin: 5px;
    text-align: center;
    font-size: 1.5em;
  }
  .btn_primary {
    width: 100%;
    margin-top: 30px;
    background-color: rgb(93, 138, 222);
    font-size: 13px;
    font-weight: bold;
    color: white;
    transition: background-color 0.3s ease;
  }

  .btn_primary:hover{
    background-color: rgb(82, 114, 174);
  }

  .btn-secondary {
    width: 100%;
    margin-top: 10px;
    font-size: 13px;
    font-weight: bold;
    color: white;
    transition: background-color 0.3s ease;
  }

  .btn-secondary:hover{
    background-color: rgb(147, 147, 147);
  }

  .p_in_otp{
    font-weight: 600;
    font-size: 16px;
    color: rgb(112, 111, 111);
    margin-bottom: 30px;
  }

  @media (max-width: 550px) {
    .p_in_otp {
      font-size: 14px;
    }
  }

  @media (max-width: 395px) {
    .p_in_otp {
      font-size: 13px;
    }
  }

</style>
<div class="container">
  {{#if toomanyotp}}
   <p style="color: red;">You have requested too many OTPs. Please try again after an hour.</p>
  {{/if}}
  <p class="text-center p_in_otp">Enter OTP sended to registered mail</p>
  <form id="otp-form" action="/maintainer/verify-otp" method="POST">
  <div class="form-group d-flex justify-content-center">
    <input type="text" name="otp1" maxlength="1" class="form-control otp-input" required>
    <input type="text" name="otp2" maxlength="1" class="form-control otp-input" required>
    <input type="text" name="otp3" maxlength="1" class="form-control otp-input" required>
    <input type="text" name="otp4" maxlength="1" class="form-control otp-input" required>
    <input type="text" name="otp5" maxlength="1" class="form-control otp-input" required>
    <input type="text" name="otp6" maxlength="1" class="form-control otp-input" required>
  </div>
  <input type="hidden" name="otp" id="otp">
  <button type="submit" class="btn btn_primary">Verify OTP</button>
</form>
<form id="resend-otp-form" action="/maintainer/maintainerlogin" method="POST">
  <input type="hidden" name="resendOtp" value="true">
  <input type="hidden" name="senCurreSponDer" value="{{send_mail}}">
  <button type="submit" class="btn btn-secondary mt-2">Resend OTP</button>
</form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const inputs = document.querySelectorAll('.otp-input');
    inputs.forEach((input, index) => {
      input.addEventListener('input', () => {
        if (input.value.length === 1) {
          if (index < inputs.length - 1) {
            inputs[index + 1].focus();
          } else {
            input.blur();
          }
        }
      });

      input.addEventListener('keydown', (event) => {
        if (event.key === 'Backspace' && input.value === '' && index > 0) {
          inputs[index - 1].focus();
        }
      });
    });

    document.getElementById('otp-form').addEventListener('submit', function (event) {
      event.preventDefault();
      let otp = '';
      inputs.forEach(input => {
        otp += input.value;
      });
      document.getElementById('otp').value = otp;
      this.submit();
    });
  });
</script>
